@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/output.css" rel="stylesheet" />

<div class="min-h-screen bg-gradient-to-br from-blue-500 to-purple-600">
    <!-- Hero Section -->
    <div class="container mx-auto px-4 py-16">
        <div class="text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-4">
                Welcome to My Site
            </h1>
            <p class="text-xl text-white/80 mb-8">
                A demo of Tailwind CSS features
            </p>
            <button class="bg-white text-blue-600 px-6 py-3 rounded-lg shadow-lg 
                         hover:bg-blue-50 transition duration-300">
                Get Started
            </button>
        </div>
    </div>

    <!-- Feature Cards -->
    <div class="container mx-auto px-4 pb-16">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <!-- Card 1 -->
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-white 
                        hover:transform hover:scale-105 transition duration-300">
                <div class="text-2xl mb-4">🎨</div>
                <h3 class="text-xl font-semibold mb-2">Beautiful Design</h3>
                <p class="text-white/80">Utilizing Tailwind's utility classes for modern designs</p>
            </div>

            <!-- Card 2 -->
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-white 
                        hover:transform hover:scale-105 transition duration-300">
                <div class="text-2xl mb-4">📱</div>
                <h3 class="text-xl font-semibold mb-2">Responsive</h3>
                <p class="text-white/80">Fully responsive layout that works on all devices</p>
            </div>
    
            <!-- Card 3 -->
            <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 text-white 
                        hover:transform hover:scale-105 transition duration-300">
                <div class="text-2xl mb-4">⚡</div>
                <h3 class="text-xl font-semibold mb-2">Performance</h3>
                <p class="text-white/80">Optimized for speed and efficiency</p>
            </div>
        </div>
    </div>
</div>



